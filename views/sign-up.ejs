<!doctype html>
<html lang="en" data-framework="angularjs">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>Node Authentication</title>

    <link rel="stylesheet" href="/libs/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="/libs/font-awesome/css/font-awesome.css">

    <style>
        body {
            padding-top: 80px;
        }

        [ng-cloak] {
            display: none;
        }
    </style>
</head>
<body>
<div class="container" ng-cloak>
    <div class="col-sm-6 col-sm-offset-3" ng-controller="SingUpController">

        <h1><span class="fa fa-sign-in" ng-click="quickSingUp()"></span> Sign Up</h1>

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/signup" method="post" autocomplete="off">

            <div class="form-group" ng-class="{ 'has-error' : !isNameValid() }">
                <label>Name</label>
                <input type="text" class="form-control" name="name" ng-model="name"
                       autocomplete="off">
            </div>

            <div class="form-group" ng-class="{ 'has-error' : !isEmailValid() }">
                <label>Email</label>
                <input type="text" class="form-control" name="email" ng-model="email"
                       autocomplete="off">
            </div>

            <div class="form-group" ng-class="{ 'has-error' : !isPasswordValid() }">
                <label>Password</label>
                <input type="password" class="form-control" name="password" ng-model="password"
                       autocomplete="off">
            </div>

            <div class="form-group" ng-class="{ 'has-error' : !isPasswordValid() }">
                <label>Confirm password</label>
                <input type="password" class="form-control" ng-model="confirmedPassword"
                       autocomplete="off">
            </div>

            <button type="submit" class="btn btn-warning btn-lg"
                    ng-disabled="!isEmailValid() || !isPasswordValid()">
                Sign Up
            </button>
        </form>

        <hr>

        <p>Already have an account? <a href="/login">Login</a></p>

        <p>Or go <a href="/">home</a>.</p>
    </div>
</div>

<script type="text/javascript" src="/libs/js/jquery.js"></script>
<script type="text/javascript" src="/libs/js/angular.js"></script>

<script type="text/javascript" src="/client/modules/sing-up/sing-up-module.js"></script>
<script type="text/javascript" src="/client/modules/sing-up/controllers/sing-up-controller.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        angular.bootstrap(document, ['sing-up']);
    });
</script>

</body>
</html>