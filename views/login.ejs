<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <title>Login</title>

    <link rel="stylesheet" href="libs/bootstrap/css/bootstrap.css">
    <link rel="stylesheet" href="libs/font-awesome/css/font-awesome.css">

    <style>
        body {
            padding-top: 80px;
        }

        [ng-cloak] {
            display: none;
        }
    </style>

</head>
<body>
<div class="container" ng-cloak>

    <div class="col-sm-6 col-sm-offset-3" ng-controller="LoginController">

        <h1><span class="fa fa-sign-in" ng-click="quickLogin()"></span> Login</h1>

        <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
        <% } %>

        <form action="/login" method="post">

            <div class="form-group" ng-show="workspaces.length > 0">

                <label>Select workspace</label>

                <br>

                <div class="btn-group" dropdown is-open="workspaceDropdown.isOpen">

                    <button type="button" class="btn btn-primary dropdown-toggle">
                        {{ currentWorkspace.name }} <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                        <li>
                            <a href ng-repeat="workspace in workspaces" ng-click="chooseWorkspace(workspace)">
                                {{ workspace.name }}
                            </a>
                        </li>
                    </ul>
                </div>

            </div>

            <div class="form-group" ng-class="{ 'has-error' : !isEmailValid() }">
                <label>Email</label>
                <input type="text" class="form-control" name="email" ng-model="email">
            </div>

            <div class="form-group" ng-class="{ 'has-error' : !isPasswordValid() }">
                <label>Password</label>
                <input type="password" class="form-control" name="password" ng-model="password">
            </div>

            <div class="form-group" ng-show="false">
                <input class="form-control" name="workspaceId" ng-model="currentWorkspace.id">
            </div>

            <button type="submit" class="btn btn-warning btn-lg">Login</button>

        </form>

        <hr>

        <p>Need an account? <a href="/signup">Signup</a></p>

        <p>Or go <a href="/">home</a>.</p>

    </div>

</div>

<script type="text/javascript" src="libs/js/jquery.js"></script>
<script type="text/javascript" src="libs/js/angular.js"></script>
<script type="text/javascript" src="libs/bootstrap/js/ui-bootstrap-tpls.js"></script>

<script type="text/javascript" src="client/modules/login/login-module.js"></script>
<script type="text/javascript" src="client/modules/login/controllers/login-controller.js"></script>
<script type="text/javascript" src="client/modules/providers/providers-module.js"></script>
<script type="text/javascript" src="client/modules/providers/factories/api-provider.js"></script>

<script type="text/javascript">
    $(document).ready(function () {
        angular.bootstrap(document, ['login']);
    });
</script>

</body>
</html>